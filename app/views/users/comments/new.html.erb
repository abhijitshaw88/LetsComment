<div class="container">
    <div class="card">
        <div class="card-content">
          Created_by: <%= @todo_item.user.fullname %><br>
          Task_name: <%= @todo_item.item_name%><br>
          Description: <%= @todo_item.body %><br>
          Status: <%= @todo_item.status %><br>
          <%= form_for @comment, url: users_todo_item_comments_url do |form| %>
          <% if @comment.errors.any? %>
            <div id="error_explanation">
              <ul>
              <% @comment.errors.full_messages.each do |message| %>
                <li>Error:-<%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
            <div class="field">
              <%= form.text_field :body %>
            </div>
            <div class="actions">
              <%= form.submit %>
            </div>
          <% end %>
        </div>
      </div>
</div>
