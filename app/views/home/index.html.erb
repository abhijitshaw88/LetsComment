<h1>Welcome to ToDo Task Master</h1>
<div class="container">
  <% @todo_items_all.each do |todo_item| %>
  <div class="row">
    <div class="col s2 m6 l6">
        <div class="card  brown lighten-4">
          <div class="card-content">
            <span class="card-tile">
              <h5><%= todo_item.user.fullname %><br></h5>
            </span>
            <p>
            Task_name: <%= todo_item.item_name%><br>
            Description: <%= todo_item.body %><br>
            Status: <%= todo_item.status %><br>
            </p>
          </div>
          <div class="card-action black-text">
              <h5>Comments:</h5>
              <h6>
              <% todo_item.comments.each do |c| %>
             <%= c.body %>   <br> by: <%= c.user.fullname%>
              <br><br>
              <%end%></h6>
               <!-- <i class="small material-icons">comment</i> -->
              <div class="comment ">
                <i class="tiny material-icons">comment</i>
                <%= link_to 'comment', new_users_todo_item_comment_path(todo_item) %>
              </div>
          </div>
        </div>
      </div>
  </div>
  <%end%>
</div>
